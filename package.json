{
    "name": "fn",
    "title": "Fn",
    "version": "1.4.0",
    "author": {
        "name": "Stephen Band",
        "url": "http://stephen.band",
        "twitter": "stephband"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/stephband/fn.git"
    },

    "bugs": {
        "url": "https://github.com/stephband/fn/issues"
    },

    "licenses": [
        {
            "url": "http://unlicense.org/"
        }
    ],
    "files": [
        "js/fn.js"
    ],
    "description": "A library of functions, observers and streams, published as ES6 modules.",
    "keywords": [
        "browser",
        "web",
        "library",
        "functional",
        "stream",
        "js",
        "javascript"
    ],
    "homepage": "http://stephen.band/fn",
    "docs": "http://github.com/stephband/fn",
    "devDependencies": {
        "rollup": "^1.27.9",
        "eslint": "^6.5.1",
        "node-sass": "^4.13.0",
        "puppeteer": "^1.20.0"
    },
    "module": "module.js",
    "main": "index.js",
    "scripts": {
        "lint": "eslint modules/*.js",
        "build": "npm run sass && npm run build-cjs && npm run build-esm && npm run build-docs",
        "build-cjs": "rollup module.js --o build/script.js --f iife --output.name Fn",
        "build-esm": "rollup module.js --o build/module.js --f esm",
        "build-docs": "node render-html.js http://localhost/fn/template.html ./index.html 8 && git add index.html",
        "sass": "node-sass --output-style compact --indent-type tab --indent-width 1 -o css css/respond.scss"
    }
}
