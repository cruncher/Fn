    },
    "licenses": [
        {
            "url": "http://unlicense.org/"
        }
    ],
    "files": [
        "js/fn.js"
    ],
    "description": "A library of functions, observers and streams, published as ES6 modules.",
    "keywords": [
        "browser",
        "web",
        "library",
        "functional",
        "stream",
        "js",
        "javascript"
    ],
    "homepage": "http://stephen.band/fn",
    "docs": "http://github.com/stephband/fn",
    "devDependencies": {
        "rollup": "^1.27.9",
        "eslint": "^6.5.1",
        "node-sass": "^4.13.0",
        "puppeteer": "^1.20.0",
        "http-server": "^0.12.1"
    },
    "module": "module.js",
    "main": "index.js",
    "scripts": {
        "lint": "eslint modules/*.js",
        "serve": "npx http-server ../ -p 8080 &",
        "serve-kill": "kill $(lsof -t -i:8080)",
        "build-css": "node ../bolt/build-css.js ./style.min.css ../fn/package.json",
        "build-module": "rollup ./module.js --o ./module.rolled.js --f esm",
        "build-docs": "npm run serve && node ../fn/render-html.js http://127.0.0.1:8080/fn/index.template.html ./index.html 4 && npm run serve-kill",
        "publish": "git pull origin master && npm run build-css && npm run build-module && git add --all && git commit -am 'Builds version 2.1.1' && git push"
    },
    "style": [
        "../bolt/fonts/fira-mono.css",
        "../bolt/css/html.css",
        "../bolt/css/svg.css",
        "../bolt/css/root.css",
        "../bolt/css/body.css",
        "../bolt/css/type.css",
        "../bolt/css/code.css",
        "../bolt/css/content.css",
        "../bolt/css/input.css",
        "../bolt/css/label.css",
        "../bolt/css/button.css",
        "../bolt/css/thumb.css",
        "../bolt/css/index.css",
        "../bolt/css/block.css",
        "../bolt/css/color.css",
        "../bolt/css/text.css",
        "../bolt/css/modifiers.css",
        "../bolt/css/respond.css",
        "../bolt/css/grid.css",
        "../bolt/components/toggle-block.css",
        "../bolt/components/toggle-button.css",
        "../bolt/css/device.css",
        "../bolt/css/var.css",
        "../dom/css/dom.css",
        "../fn/css/prism-cruncher.css",
        "../fn/css/docs.css",
        "../fn/css/tests.css",
        "./css/theme.css"
    ]
}
