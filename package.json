{
    "name": "fn",
    "title": "Fn",
    "version": "1.3.0",
    "author": {
        "name": "Stephen Band",
        "url": "http://stephen.band",
        "twitter": "stephband"
    },
    "licenses": [
        {
            "url": "http://unlicense.org/"
        }
    ],
    "files": [
        "js/fn.js"
    ],
    "description": "A library of functions, observers and streams, published as ES6 modules.",
    "keywords": [
        "browser",
        "web",
        "library",
        "functional",
        "stream",
        "js",
        "javascript"
    ],
    "homepage": "http://stephen.band/fn",
    "docs": "http://github.com/stephband/fn",
    "devDependencies": {
        "eslint": "^5.16.0",
        "node-sass": "^4.13.0",
        "puppeteer": "^1.20.0",
        "rollup": "^1.27.9"
    },
    "module": "module.js",
    "main": "index.js",
    "scripts": {
        "lint": "eslint modules/*.js",
        "build": "npm run build-cjs && npm run build-esm",
        "build-cjs": "rollup module.js --o index.js --f cjs",
        "build-esm": "rollup module.js --o fn.js --f esm",
        "build-docs": "node render-html.js http://localhost/fn/template.html ./index.html 8",
        "sass": "node-sass --output-style compact --indent-type tab --indent-width 1 -o css css/respond.scss"
    }
}
